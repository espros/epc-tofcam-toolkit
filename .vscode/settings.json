{
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.venv": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        ".pytest_cache": true,
        ".mypy_cache": true
    },
    "python.testing.pytestArgs": [
        "tests",
        "-m",
        ""
    ],
    "autopep8.args": [
        "--max-line-length",
        "250"
    ],
    "editor.formatOnSave": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "editor.tabSize": 4
}